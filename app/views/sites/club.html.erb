<h1>
  <%= @club.name %>
</h1>

<%= image_tag(@club.img_url) %>
<p>
  <%= @club.description %>
</p>


<h2>Upcomming Events</h2>

<% @events.each do |event| %>
  <div class="well">
    <%= event.name %>
    ||
    <%= event.date %>
    <%= event.description %>
    <p>
        <%= link_to "more info", sites_event_path(event) %>
    </p>
  </div>
  <%= @club.address %>


<% end %>



<hr style="color:white;">


<div  style='width: 100%;'>
  <div id="custom_style" style='width: 100%; height: 300px;'></div>
</div>




