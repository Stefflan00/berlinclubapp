      internal: {id: 'custom_style'},
      provider: {
        zoom:      15,
        center:    new google.maps.LatLng(<%= @club.lat%>,<%= @club.lng%>),
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        styles:    mapStyle
      }
    },
    function(){
